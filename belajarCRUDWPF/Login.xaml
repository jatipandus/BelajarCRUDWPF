<Window x:Class="belajarCRUDWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:belajarCRUDWPF"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Label Content="Email" HorizontalAlignment="Left" Margin="42,60,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="42,104,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_email_login" HorizontalAlignment="Left" Height="23" Margin="114,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="txt_email_login_PreviewTextInput"/>
        <PasswordBox x:Name="txt_password" HorizontalAlignment="Left" Margin="114,107,0,0" VerticalAlignment="Top" Width="120" PreviewTextInput="txt_password_PreviewTextInput"/>
        <Button x:Name="btn_login" Content="Login" HorizontalAlignment="Left" Margin="42,142,0,0" VerticalAlignment="Top" Width="75" Click="btn_login_Click"/>
        <Button x:Name="btn_forgot" Content="Forgot Password" HorizontalAlignment="Left" Margin="138,142,0,0" VerticalAlignment="Top" Width="96" Click="btn_forgot_Click"/>
    </Grid>
</Window>
